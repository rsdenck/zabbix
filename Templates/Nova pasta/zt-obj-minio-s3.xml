<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-01-13T14:55:16Z</date>
    <groups>
        <group>
            <name>Templates/Databases</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template MinIO</template>
            <name>Template MinIO</name>
            <groups>
                <group>
                    <name>Templates/Databases</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>MinIO</name>
                </application>
                <application>
                    <name>MinIO json items</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>MinIO: cluster status</name>
                    <type>DEPENDENT</type>
                    <key>minio.cluster.status</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>MinIO</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.status</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>6h</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>minio.get_status_variables</key>
                    </master_item>
                </item>
                <item>
                    <name>MinIO: disks online</name>
                    <type>DEPENDENT</type>
                    <key>minio.disks.online</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>90d</trends>
                    <applications>
                        <application>
                            <name>MinIO</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.info.backend.onlineDisks</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>1h</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>minio.get_status_variables</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{diff()}=1</expression>
                            <name>MinIO: Disks online is changed</name>
                            <priority>HIGH</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Availability: Get status variables</name>
                    <key>minio.get_status_variables</key>
                    <history>1h</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>The item gets server global status information.</description>
                    <applications>
                        <application>
                            <name>MinIO json items</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{nodata(30m)}=1</expression>
                            <name>MinIO: Failed to get items (no data for 30m)</name>
                            <priority>HIGH</priority>
                            <description>Zabbix has not received data for items for the last 10 minutes.</description>
                            <dependencies>
                                <dependency>
                                    <name>MinIO: Service is down</name>
                                    <expression>{Template MinIO:minio.ping.last()}=0</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Availability: Get servers list</name>
                    <key>minio.get_status_variables[&quot;1d&quot;]</key>
                    <delay>1d</delay>
                    <history>1d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>MinIO json items</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>\n
</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>:9000
</params>
                        </step>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.info.servers[0].network</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>:&quot;online&quot;,
^,^</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>:&quot;online&quot;
^.^</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>{
{&quot;data&quot;:[{&quot;{#MINIOSERVERS}&quot;:</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>^,^
},{&quot;{#MINIOSERVERS}&quot;:</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>^.^
}]</params>
                        </step>
                    </preprocessing>
                </item>
                <item>
                    <name>MinIO: objects</name>
                    <type>DEPENDENT</type>
                    <key>minio.objects</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>90d</trends>
                    <applications>
                        <application>
                            <name>MinIO</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.info.objects.count</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>1h</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>minio.get_status_variables</key>
                    </master_item>
                </item>
                <item>
                    <name>Availability: MinIO status</name>
                    <key>minio.ping</key>
                    <history>7d</history>
                    <trends>30d</trends>
                    <status>DISABLED</status>
                    <applications>
                        <application>
                            <name>MinIO</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <preprocessing>
                        <step>
                            <type>JAVASCRIPT</type>
                            <params>return value.search(/presentations/)&gt;0?1:0</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>10m</params>
                        </step>
                    </preprocessing>
                    <triggers>
                        <trigger>
                            <expression>{last()}=0</expression>
                            <name>MinIO: Service is down</name>
                            <status>DISABLED</status>
                            <priority>HIGH</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>MinIO: usage size</name>
                    <type>DEPENDENT</type>
                    <key>minio.usage.size</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>90d</trends>
                    <applications>
                        <application>
                            <name>MinIO</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.info.usage.size</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>1h</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>minio.get_status_variables</key>
                    </master_item>
                </item>
                <item>
                    <name>saveAvailability: Get servers list</name>
                    <type>DEPENDENT</type>
                    <key>save.minio.servers.json</key>
                    <delay>0</delay>
                    <history>1h</history>
                    <trends>0</trends>
                    <status>DISABLED</status>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>MinIO json items</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>\n
</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>:9000
</params>
                        </step>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.info.servers[0].network</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>:&quot;online&quot;,
^,^</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>:&quot;online&quot;
^.^</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>{
{&quot;data&quot;:[{&quot;{#MINIOSERVERS}&quot;:</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>^,^
},{&quot;{#MINIOSERVERS}&quot;:</params>
                        </step>
                        <step>
                            <type>STR_REPLACE</type>
                            <params>^.^
}]</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>minio.get_status_variables</key>
                    </master_item>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>minio node list</name>
                    <type>DEPENDENT</type>
                    <key>minio.nodes</key>
                    <delay>0</delay>
                    <lifetime>1d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>minio node: {#MINIOSERVERS} live health point</name>
                            <type>HTTP_AGENT</type>
                            <key>minio.health.live.node[&quot;{#MINIOSERVERS}&quot;]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>MinIO</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JAVASCRIPT</type>
                                    <params>if(value.includes('200')){
   return '200'
}
else{
   return value
}</params>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>2h</params>
                                </step>
                            </preprocessing>
                            <url>https://{#MINIOSERVERS}:9000/minio/health/ready</url>
                            <retrieve_mode>HEADERS</retrieve_mode>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(200)}=0</expression>
                                    <name>MinIO: {#MINIOSERVERS} Health check error - live point</name>
                                    <priority>INFO</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>minio node: {#MINIOSERVERS} ready helth point</name>
                            <type>HTTP_AGENT</type>
                            <key>minio.health.ready.node[&quot;{#MINIOSERVERS}&quot;]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>MinIO</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JAVASCRIPT</type>
                                    <params>if(value.includes('200')){
   return '200'
}
else{
   return value
}
</params>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>2h</params>
                                </step>
                            </preprocessing>
                            <url>https://{#MINIOSERVERS}:9000/minio/health/ready</url>
                            <retrieve_mode>HEADERS</retrieve_mode>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(200)}=0</expression>
                                    <name>MinIO: {#MINIOSERVERS} Health check error - ready point</name>
                                    <priority>INFO</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <master_item>
                        <key>minio.get_status_variables[&quot;1d&quot;]</key>
                    </master_item>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$LINUX.USER}</macro>
                    <value>oracle</value>
                    <description>от какой учетки запускать клиента</description>
                </macro>
                <macro>
                    <macro>{$MINIO.CLIENT.PATH}</macro>
                    <value>/home/oracle/mc</value>
                    <description>full path of minio client</description>
                </macro>
            </macros>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
